<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>



<template id="report_label_watching_product">
    <t t-call="report.html_container">
        <div class="page">
        <t t-foreach="docs" t-as="o">
            <div style="height:100px;margin:0;padding:3px;border:solid #eee 1px;">
                <div style="float:left;width:100%;height:50%;overflow:hidden;padding-top:5px;text-align:left">
                    <div style="float:left;width:100%;padding-top:0px;text-align:left">
                        <span t-field="o.name" style="font-size:1.8em;font-weight: 700;"/>
                        (<span t-field="o.default_code" style="font-size:0.9em;font-weight: 700;"/>)
                    </div>
                </div>
                <div style="float:left;width:100%;height:50%;overflow:hidden;text-align:left;">
                    <div style="font-size:15px;width:100%;float:right">
                        <div style="font-size:2.0em;font-weight: 700;float:left; padding-right:10px;"  ><t t-raw="o.ba_price_frendly_style(o.total_price)"  /></div>

                        <div t-field="o.total_price_condition_text"  style="font-size:0.5em;font-weight: 100;float:left;max-width:60%;" />                       
                        <img src='/ba_watching_products/static/logo/b.png' style="float:right;overflow:hidden;text-align:right;"/></div>





                </div>
            </div>
        </t>
        </div>
    </t>
</template>


</data>
</openerp>


