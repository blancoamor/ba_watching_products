<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>


<template id="report_label_watching_product">
    <t t-call="report.html_container">
   <div class="page">
        <t t-foreach="docs" t-as="o">
            <div style="height:100px;margin:0;padding:3px;border:solid #eee 1px;page-break-inside: avoid;">
                <div style="float:left;width:100%;height:40%;overflow:hidden;padding-top:5px;text-align:left">
                    <div style="float:left;width:100%;padding-top:0px;text-align:left">
                        <span t-field="o.name" style="font-size:1.5em;font-weight: 700;"/>
                        (<span t-field="o.default_code" style="font-size:0.8em;font-weight: 700;"/>)
                    </div>
                </div>
                <div style="float:left;width:100%;height:60%;overflow:hidden;text-align:left;">
                    <div style="font-size:15px;width:100%;float:right">



                        <div style="font-size:1.4em;font-weight: 700;float:left; padding-right:2px; width:40%;"  ><t t-raw="o.ba_price_frendly_style(o.price_with_tax)"  /><br/><span style="font-size:0.6em;font-weight: 700;padding:0;margin:0;">Precio de lista hasta 12 Cuotas</span></div>

                        <div style="font-size:1.4em;font-weight: 700;float:left; padding-right:2px; width:40%;"  ><t t-raw="o.ba_price_frendly_style(o.total_price)"  /><br/><span style="font-size:0.6em;font-weight: 700;padding:0;margin:0;">Efectivo, Débito o TC 1 pago</span></div>


                         </div>





                </div>
            </div>
        </t>
        </div>


    </t>
</template>


